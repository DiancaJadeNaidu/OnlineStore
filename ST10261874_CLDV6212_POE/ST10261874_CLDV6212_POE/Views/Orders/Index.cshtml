@model IEnumerable<ST10261874_CLDV6212_POE.Models.Order>

<h1>All Orders</h1>
<a href="@Url.Action("Register", "Orders")" class="btn btn-primary">Add New Order</a>
<table class="table">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Product ID</th>
            <th>Date and Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Customer_ID</td>
                <td>@order.Product_ID</td>
                <td>@order.Ordering_Date.ToString("g")</td>
                <td>
                    <a href="@Url.Action("Delete", "Orders", new { id = order.RowKey })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this order?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>