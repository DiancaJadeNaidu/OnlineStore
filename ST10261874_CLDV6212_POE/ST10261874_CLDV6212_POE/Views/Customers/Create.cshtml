@model ST10261874_CLDV6212_POE.Models.Customer

<h1>Add New Customer</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Customer_Name">Full Name</label>
        <input asp-for="Customer_Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Customer_Email">Email Address</label>
        <input asp-for="Customer_Email" class="form-control" type="email" required />
    </div>
    <div class="form-group">
        <label asp-for="Customer_Password">Password</label>
        <input asp-for="Customer_Password" class="form-control" type="password" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>
